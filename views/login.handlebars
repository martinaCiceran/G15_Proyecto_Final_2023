                <label for="usuarioId" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="usuarioId" name="usuario" value="" placeholder="Usuario">
            </div>
            <div class="mb-3 form-group">
                <label for="passwordId" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="passwordId" name="contraseña" placeholder="Contraseña">
            </div>
            <div  class="form-login-registro">
                <input type="button" onclick="login()" class="botones" value="Ingresar">
            </div>
        </form>
        <form action="/irAregistro" method="GET">
            <div class="form-login-registro">
                <input type="submit" class="botonRegistro" value="Registrar">
            </div>
        </form>
        <form action="/home" method="POST" id="form-login"></form>
        <form action="/inicio-admin" method="GET" id="form-admin"></form>
    </section>

</body>
